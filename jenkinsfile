pipeline {
    agent any
    environment {
        DOCKER_HUB_CREDENTIALS = credentials('DOCKER_HUB_CREDENTIALS')
    }
    triggers {
        // Poll the repository every 5 minutes (adjust as necessary)
        pollSCM('H/5 * * * *')
    }
    stages {
        
        stage('Build') {
            steps {
                sh '''
                    chmod +x build.sh
                    ./build.sh
                '''
            }
        }
        stage('Deploy') {
            steps {
                sh '''
                    chmod +x deploy.sh
                    ./deploy.sh
                '''
            }
        }
    }
    post {
        always {
            echo 'Cleaning up...'
            sh 'docker logout'
        }
        failure {
            echo 'Deployment failed.'
        }
    }
}
