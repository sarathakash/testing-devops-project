pipeline {
  agent any

  stages {
    stage('Build') {
      steps {
        sh 'docker build -t ngimg .'
        sh 'docker run --name nginx-container1 -d -p 3000:80  ngimg'
        sh 'sudo apt install docker-compose -y'
        sh 'docker-compose up -d'
        sh 'docker-compose build'
        sh 'docker tag ngimg $DOCKER_BFLASK_IMAGE'
      }
    }
    stage('Deploy & push') {
      steps {
        withCredentials([usernamePassword(credentialsId: "${DOCKER_REGISTRY_CREDS}", passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
          sh 'echo \$DOCKER_PASSWORD | docker login -u \$DOCKER_USERNAME --password-stdin docker.io'
          sh 'docker push $DOCKER_BFLASK_IMAGE'
        }
      }
    }
    
  }

post{
      always{
            sh 'docker run -d -p 4002:80 sarathakashk95/prod:latest'
}

}
}
