pipeline {
    agent any
    environment {
        DOCKER_HUB_CREDENTIALS = credentials('DOCKER_HUB_CREDENTIALS')
    }
    triggers {
        // Poll the repository every 5 minutes (adjust as necessary)
        pollSCM('H/5 * * * *')
    }
    stages {
        stage('Checkout SCM') {
            steps {
                script {
                    def branchName = env.BRANCH_NAME ?: 'Prod'
                    checkout([$class: 'GitSCM', branches: [[name: "*/${branchName}"]],
                              doGenerateSubmoduleConfigurations: false, extensions: [],
                              userRemoteConfigs: [[url: 'https://github.com/N-Moorthy/CapstoneProject.git',
                                                   credentialsId: '790d4f9c-ab11-4f3a-99d1-d9d4e98e4ab9']]])
                }
            }
        }
        stage('Build') {
            steps {
                sh '''
                    chmod +x build.sh
                    ./build.sh
                '''
            }
        }
        stage('Deploy') {
            steps {
                sh '''
                    chmod +x deploy.sh
                    ./deploy.sh
                '''
            }
        }
    }
    post {
        always {
            echo 'Cleaning up...'
            sh 'docker logout'
        }
        failure {
            echo 'Deployment failed.'
        }
    }
}
